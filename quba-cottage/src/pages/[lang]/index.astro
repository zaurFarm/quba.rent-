---
import Layout from '../../layouts/Layout.astro';
import { languages, ui, defaultLang } from '../../i18n/translations';

interface Props {
  lang?: string;
}

const { lang = defaultLang } = Astro.props;

const t = ui[lang as keyof typeof ui] || ui[defaultLang];

const languageNames: Record<string, string> = {
  az: 'AZ',
  en: 'EN',
  ar: 'ÿßŸÑÿπÿ±ÿ®Ÿäÿ©',
  fr: 'FR',
  de: 'DE',
  zh: '‰∏≠Êñá',
  fa: 'ŸÅÿßÿ±ÿ≥€å',
  tr: 'T√úRK',
};

const currentLang = lang || defaultLang;
const isRTL = lang === 'ar' || lang === 'fa';

// Image paths - these would be the actual images from user_input_files
const images = [
  '/images/photo-1.jpg',
  '/images/photo-2.jpg',
  '/images/photo-3.jpg',
  '/images/photo-4.jpg',
  '/images/photo-5.jpg',
  '/images/photo-6.jpg',
  '/images/photo-7.jpg',
];
---

<Layout lang={lang} title={`${t['hero.title']} | ${t['hero.subtitle']}`}>
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <a href={`/${lang === defaultLang ? '' : lang + '/'}`} class="flex items-center gap-2">
          <svg class="w-8 h-8 text-forest-600" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 3L4 9v12h16V9l-8-6zm0 2.5l6 4.5v9H6v-9l6-4.5z"/>
            <path d="M9 14h6v5H9z"/>
          </svg>
          <span class="font-semibold text-forest-800 hidden sm:block">Quba Cottage</span>
        </a>
        
        <!-- Desktop Navigation -->
        <div class={`hidden md:flex items-center gap-8 ${isRTL ? 'flex-row-reverse' : ''}`}>
          <a href="#about" class="text-earth-800 hover:text-forest-600 transition-colors">{t['nav.about']}</a>
          <a href="#gallery" class="text-earth-800 hover:text-forest-600 transition-colors">{t['nav.gallery']}</a>
          <a href="#amenities" class="text-earth-800 hover:text-forest-600 transition-colors">{t['nav.amenities']}</a>
          <a href="#location" class="text-earth-800 hover:text-forest-600 transition-colors">{t['nav.location']}</a>
          <a href="#contact" class="text-earth-800 hover:text-forest-600 transition-colors">{t['nav.contact']}</a>
        </div>
        
        <!-- Language Switcher & CTA -->
        <div class={`flex items-center gap-4 ${isRTL ? 'flex-row-reverse' : ''}`}>
          <div class="relative group">
            <button class="flex items-center gap-1 px-3 py-2 text-earth-800 hover:text-forest-600 transition-colors font-medium">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
              <span class="hidden sm:inline">{languageNames[currentLang]}</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              {Object.entries(languages).map(([l, name]) => (
                <a 
                  href={l === defaultLang ? '/' : `/${l}/`}
                  class={`block px-4 py-2 text-sm hover:bg-forest-50 transition-colors ${currentLang === l ? 'text-forest-600 font-medium' : 'text-earth-800'}`}
                >
                  {name}
                </a>
              ))}
            </div>
          </div>
          
          <a href="#contact" class="hidden sm:inline-flex items-center gap-2 px-5 py-2.5 bg-forest-600 text-white rounded-lg hover:bg-forest-700 transition-colors font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            {t['hero.cta']}
          </a>
        </div>
      </div>
    </div>
    
    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden absolute right-4 top-4 p-2 text-earth-800">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="fixed inset-0 z-40 bg-white/95 backdrop-blur-sm opacity-0 invisible transition-all duration-300 md:hidden">
    <div class="flex flex-col items-center justify-center h-full gap-8 p-4">
      <a href="#about" class="text-2xl text-earth-800 hover:text-forest-600">{t['nav.about']}</a>
      <a href="#gallery" class="text-2xl text-earth-800 hover:text-forest-600">{t['nav.gallery']}</a>
      <a href="#amenities" class="text-2xl text-earth-800 hover:text-forest-600">{t['nav.amenities']}</a>
      <a href="#location" class="text-2xl text-earth-800 hover:text-forest-600">{t['nav.location']}</a>
      <a href="#contact" class="text-2xl text-earth-800 hover:text-forest-600">{t['nav.contact']}</a>
      
      <div class="flex flex-wrap justify-center gap-3 mt-4">
        {Object.entries(languages).map(([l, name]) => (
          <a 
            href={l === defaultLang ? '/' : `/${l}/`}
            class={`px-3 py-1 rounded-full text-sm ${currentLang === l ? 'bg-forest-600 text-white' : 'bg-earth-100 text-earth-800 hover:bg-forest-100'}`}
          >
            {name}
          </a>
        ))}
      </div>
      
      <button id="mobile-menu-close" class="absolute top-4 right-4 p-2 text-earth-800">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-forest-900">
      <img 
        src="/images/photo-main.jpg" 
        alt="Quba Mountain Cottage" 
        class="w-full h-full object-cover opacity-60"
      />
    </div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-forest-900/50 via-forest-900/30 to-earth-900/60"></div>
    
    <!-- Content -->
    <div class="relative z-10 text-center px-4 max-w-5xl mx-auto">
      <span class="inline-block px-4 py-2 bg-river-500/20 backdrop-blur-sm rounded-full text-river-100 text-sm font-medium mb-6 animate-fade-in">
        üèîÔ∏è {t['location.subtitle']}
      </span>
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-6 animate-slide-up">
        {t['hero.title']}
      </h1>
      <p class="text-xl sm:text-2xl md:text-3xl text-earth-100 mb-10 max-w-3xl mx-auto animate-slide-up" style="animation-delay: 0.2s;">
        {t['hero.subtitle']}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-slide-up" style="animation-delay: 0.4s;">
        <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 bg-river-500 text-white rounded-xl hover:bg-river-600 transition-all duration-300 font-semibold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          {t['hero.cta']}
        </a>
        <a href="#gallery" class="inline-flex items-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm text-white rounded-xl hover:bg-white/20 transition-all duration-300 font-semibold text-lg border border-white/30">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          {t['gallery.title']}
        </a>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-8 h-8 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 md:py-32 bg-earth-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div class="order-2 lg:order-1">
          <span class="inline-block px-4 py-2 bg-forest-100 text-forest-700 rounded-full text-sm font-medium mb-6">
            üè° {t['about.title']}
          </span>
          <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-forest-800 mb-8 leading-tight">
            {t['about.title']}
          </h2>
          <p class="text-lg md:text-xl text-earth-700 mb-8 leading-relaxed">
            {t['about.text']}
          </p>
          
          <!-- Features Grid -->
          <div class="grid grid-cols-2 gap-4">
            <div class="flex items-center gap-3 p-4 bg-white rounded-xl shadow-sm">
              <div class="w-12 h-12 bg-forest-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              </div>
              <span class="font-medium text-earth-800">{t['about.features.1']}</span>
            </div>
            <div class="flex items-center gap-3 p-4 bg-white rounded-xl shadow-sm">
              <div class="w-12 h-12 bg-forest-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-forest-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
              </div>
              <span class="font-medium text-earth-800">{t['about.features.2']}</span>
            </div>
            <div class="flex items-center gap-3 p-4 bg-white rounded-xl shadow-sm">
              <div class="w-12 h-12 bg-river-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-river-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
              </div>
              <span class="font-medium text-earth-800">{t['about.features.3']}</span>
            </div>
            <div class="flex items-center gap-3 p-4 bg-white rounded-xl shadow-sm">
              <div class="w-12 h-12 bg-river-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-river-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
                </svg>
              </div>
              <span class="font-medium text-earth-800">{t['about.features.4']}</span>
            </div>
          </div>
        </div>
        
        <!-- Image Grid -->
        <div class="order-1 lg:order-2 grid grid-cols-2 gap-4">
          <div class="space-y-4">
            <img src="/images/photo-1.jpg" alt="Cottage exterior" class="rounded-2xl shadow-lg w-full h-48 md:h-64 object-cover transform hover:scale-105 transition-transform duration-300" />
            <img src="/images/photo-2.jpg" alt="Mountain view" class="rounded-2xl shadow-lg w-full h-40 md:h-48 object-cover transform hover:scale-105 transition-transform duration-300" />
          </div>
          <div class="space-y-4 pt-8">
            <img src="/images/photo-3.jpg" alt="Forest surroundings" class="rounded-2xl shadow-lg w-full h-40 md:h-48 object-cover transform hover:scale-105 transition-transform duration-300" />
            <img src="/images/photo-4.jpg" alt="River view" class="rounded-2xl shadow-lg w-full h-48 md:h-64 object-cover transform hover:scale-105 transition-transform duration-300" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section id="gallery" class="py-20 md:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 bg-river-100 text-river-700 rounded-full text-sm font-medium mb-6">
          üì∏ {t['gallery.title']}
        </span>
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-forest-800 mb-6">
          {t['gallery.title']}
        </h2>
        <p class="text-xl text-earth-600 max-w-2xl mx-auto">
          {t['gallery.subtitle']}
        </p>
      </div>
      
      <!-- Masonry Gallery -->
      <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
        <div class="break-inside-avoid">
          <img src="/images/photo-1.jpg" alt="Cottage view 1" class="w-full rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer transform hover:scale-105 transition-transform" loading="lazy" />
        </div>
        <div class="break-inside-avoid">
          <img src="/images/photo-2.jpg" alt="Cottage view 2" class="w-full rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer transform hover:scale-105 transition-transform" loading="lazy" />
        </div>
        <div class="break-inside-avoid">
          <img src="/images/photo-3.jpg" alt="Cottage view 3" class="w-full rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer transform hover:scale-105 transition-transform" loading="lazy" />
        </div>
        <div class="break-inside-avoid">
          <img src="/images/photo-4.jpg" alt="Cottage view 4" class="w-full rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer transform hover:scale-105 transition-transform" loading="lazy" />
        </div>
        <div class="break-inside-avoid">
          <img src="/images/photo-5.jpg" alt="Cottage view 5" class="w-full rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer transform hover:scale-105 transition-transform" loading="lazy" />
        </div>
        <div class="break-inside-avoid">
          <img src="/images/photo-6.jpg" alt="Cottage view 6" class="w-full rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer transform hover:scale-105 transition-transform" loading="lazy" />
        </div>
        <div class="break-inside-avoid">
          <img src="/images/photo-7.jpg" alt="Cottage view 7" class="w-full rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer transform hover:scale-105 transition-transform" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Amenities Section -->
  <section id="amenities" class="py-20 md:py-32 bg-forest-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 bg-forest-100 text-forest-700 rounded-full text-sm font-medium mb-6">
          ‚ú® {t['amenities.title']}
        </span>
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-forest-800 mb-6">
          {t['amenities.title']}
        </h2>
        <p class="text-xl text-earth-600 max-w-2xl mx-auto">
          {t['amenities.subtitle']}
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- WiFi -->
        <div class="group p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="w-14 h-14 bg-forest-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-forest-600 transition-colors duration-300">
            <svg class="w-7 h-7 text-forest-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-forest-800">{t['amenities.wifi']}</h3>
        </div>
        
        <!-- Parking -->
        <div class="group p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="w-14 h-14 bg-river-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-river-500 transition-colors duration-300">
            <svg class="w-7 h-7 text-river-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-forest-800">{t['amenities.parking']}</h3>
        </div>
        
        <!-- Kitchen -->
        <div class="group p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="w-14 h-14 bg-earth-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-earth-500 transition-colors duration-300">
            <svg class="w-7 h-7 text-earth-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-forest-800">{t['amenities.kitchen']}</h3>
        </div>
        
        <!-- Heating -->
        <div class="group p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="w-14 h-14 bg-orange-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-orange-500 transition-colors duration-300">
            <svg class="w-7 h-7 text-orange-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-forest-800">{t['amenities.heating']}</h3>
        </div>
        
        <!-- BBQ -->
        <div class="group p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="w-14 h-14 bg-red-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-red-500 transition-colors duration-300">
            <svg class="w-7 h-7 text-red-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-forest-800">{t['amenities.bbq']}</h3>
        </div>
        
        <!-- River Access -->
        <div class="group p-6 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-blue-500 transition-colors duration-300">
            <svg class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
